<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{persona}}!! <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesion <i class="bi bi-box-arrow-in-left"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de opiniones</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/opiniones/agregar"><i class="bi bi-plus" aria-hidden="true">Nuevo</i></a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table table-dark">
                        <th scope="col">#</th>
                        <th class="text-begins"  scope="col">Titulo</th>
                        <th class="text-begins" scope="col">Cuerpo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each opiniones}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{cuerpo}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/opiniones/modificar/cuerpo/{{id}}"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-secondary" href="/admin/opiniones/eliminar/{{id}}"><i class="bi bi-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                   {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#if error}}
     <h5>{{message}}</h5>
    {{/if}}
</div>
